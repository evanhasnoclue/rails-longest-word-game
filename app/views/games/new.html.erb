<h1>New Game</h1>
<ul class="list-inline list-unstyled">
  <% @letters.each do |letter| %>
    <li class="list-inline-item letter text-center">
      <h2><%= letter %></h2>
    </li>
  <% end %>
</ul>
<p class="form-info">What is the longest word you can find?</p>
<div class="form-container">
  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input id="letters" name="letters" type="hidden" value="<%= @letters.join(',') %>">
    <input id="time" name="time" type="hidden" value="<%= Time.now %>">
    <div class="form-group">
      <input type="text" class="form-control" name="word">
    </div>
    <input type="submit" class="btn" value="Play">
  </form>
</div>
